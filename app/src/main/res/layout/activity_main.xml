<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Registro"
        android:id="@+id/registro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="30dp"
        android:background="#ffff2943"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:textStyle="bold"
        android:onClick="setListFooter"
        android:longClickable="true"
        android:clickable="true"
        android:textSize="17dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/login"
        android:background="#ff1819ff"
        android:gravity="center"
        android:layout_alignTop="@+id/registro"
        android:layout_alignRight="@+id/registro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffffff"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="17dp"
        android:clickable="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/logo_idecap"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/registro" />

</RelativeLayout>
